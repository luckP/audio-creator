{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug: PDF Conversion (AI_Engineering)",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": [
                "examples/AI_Engineering.pdf",
                "--clean-text",
                "--detect-chapters",
                "--generate-audio",
                "--output-dir",
                "AI_Engineering"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}